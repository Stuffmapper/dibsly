<div  ng-include src="'navbar.html'"></div>
<div class="row col-lg-12 col-md-12 col-sm-12">
  <alerts></alerts>
</div>


<div ng-controller='StuffCtrl'>
  <div class="container overlap"  >
      <button class="btn" ng-click="togglemap('40%')" ng-show='fullMap' id="show-stuffmapper-menu">Show Menu</button>

    <div class="col-md-4 col-lg-4
    col-sm-6 col-xs-12
    col-sm-offset-6
    col-md-offset-8
    col-lg-offset-8" id="stuffmapper-menu" ng-hide="fullMap">

      <button  id="hide-stuffmapper-menu" ng-hide="fullMap" ng-click="togglemap('100%')" >>></button>

      <ul class="sm-tabs">
        <li class="col-md-4 col-lg-4 col-xs-4"
        active='tabs.getStuff'
        ng-class="tabs.getStuff ?  'tab-clicked' : 'tab-unclicked'">
          <a href='#' ng-click='getStuff()'>
            <h4>Get Stuff</h4>
          </a>
        </li>

        <li class="col-md-4 col-lg-4 col-xs-4"
        active='tabs.giveStuff'
        ng-class="tabs.giveStuff ?  'tab-clicked' : 'tab-unclicked'">
          <a href= '#' ng-click='startMapper()'>
            <h4>Give Stuff</h4>
          </a>
        </li>
        <li class="col-md-4 col-lg-4 col-xs-4"
        ng-class="tabs.myStuff ?  'tab-clicked' : 'tab-unclicked'" >
          <a href="#" ng-click='getMyStuff()'>
            <h4>My Stuff</h4>
          </a>
        </li>
      </ul>

      <div ng-show='tabs.getStuff'
      class='content' ng-include src="'getstuff.html'"></div>
      <div ng-show='tabs.giveStuff'
       class='content' ng-include src="'givestuff.html'"></div>
      <div ng-show='tabs.myStuff'
      class='content'ng-include src="'mystuff.html'"></div>
      <div ng-show='tabs.details'
      class='content'ng-include src="'details.html'">
      </div>
      <div ng-show='tabs.editing'
      class='content'ng-include src="'edit.html'">
      </div>


  	</div>
  </div>

  <div class="container-fluid" id="map-container"  >
    <map id="google-map-container" center={{mapCenter}} zoom="12" >
    </map>
  </div>

</div>
