                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <%= link_to image_tag('logo-wo-bg.png'), root_path, class: "navbar-brand"  %>
             
              </div>
               <ul class="nav navbar-nav navbar-right" >
                <li><a href='#' ng-click="showSignup()" ng-hide="currentUser">Sign Up</a></li>
