<!DOCTYPE html>
<html>
<head>
  <title>StuffMapper</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.0/themes/smoothness/jquery-ui.css" />
  <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.0/jquery-ui.min.js"></script>
  <script src="assets/jquery.timeago.js" type="text/javascript"></script>
</head>
<body data-no-turbolink="true">

<div id="flash-message"><img src="assets/flashIcon.png"><span id="flash-message-span"></span></div>

<div id="smartphone-nav-button"><a id="smartphone-nav-link" href="#" title="menu">&#9776;</a></div>

<div id="top-nav">
  <a id="top-logo" href="/"><img src="/assets/LogoBeta.png" alt="StuffMapper" title="StuffMapper"></a>
  <div id="search-form-current-city">
      <form id="search-form" action="/search" method="get">
        <input type="text" name="term" placeholder="Search" id="city-term" value="<%= @term %>">
      </form>
      <% if current_user %>
        Hey there, <%= current_user.name %>
        <a href="#" id="messages-link">Messages</a> -
        <%= link_to "Log out", log_out_path %>
      <% else %>
        <a href="#" id="sign-up">Sign up</a>
        or
        <a href="#" id="log-in">log in</a>
      <% end %>
  </div>
</div>

<div id="left-nav">
  <a href="#" id="find-stuff"><div class="left-button" id="find-stuff-button"></div></a>
  <a href="#" id="what-stuff"><div class="left-button" id="what-stuff-button"></div></a>
  <a href="#" id="give-stuff"><div class="left-button" id="give-stuff-away-button"></div></a>
  <a href="#" id="my-stuff"><div class="left-button" id="my-stuff-button"></div></a>
</div>

<div id="main-container">
    <%= yield %>
</div>

<div id="bottom-nav">
  <a href="#" id="more-stuff">More Stuff</a>
  <div id="social-pins">
    <a class="social-pin" href="https://facebook.com/stuffmapper" target="_blank"><img src="/assets/facebookPin.png" alt="Facebook" title="Facebook"></a>
    <a class="social-pin" href="https://twitter.com/Stuffmapper" target="_blank"><img src="/assets/twitterPin.png" alt="Twitter" title="Twitter"></a>
    <a class="social-pin" href="http://pinterest.com/stuffmapper/" target="_blank"><img src="/assets/pinterestPin.png" alt="Pinterest" title="Pinterest"></a>
    <a class="social-pin" href="http://instagram.com/stuffmapper/" target="_blank"><img src="/assets/instagramPin.png" alt="Instagram" title="Instagram"></a>
  </div>
</div>

<% if current_user %>
    <div id="give-stuff-dialog">
        <%= render 'form' %>
    </div>
    <div id="my-stuff-dialog">
        <%= render 'users/mystuff' %>
    </div>
    <div id="messages-dialog">
        <div id="messages-new">
          <%= render 'messages/form' %>
        </div>
        <div id="messages-inbox"></div>
    </div>
<% else %>
    <div id="sign-up-dialog">
        <%= render 'users/new' %>
    </div>
    <div id="log-in-dialog">
      <%= render 'sessions/new' %>
    </div>
<% end %>

    <div id="more-stuff-dialog">

    </div>

</body>
</html>
