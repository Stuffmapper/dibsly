<h1>Listing messages</h1>

<%= paginate @messages %>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Message</th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.sender_name %></td>
        <td><%= message.receiver_name %></td>
        <td><%= message.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @messages %>

<br>

<%= link_to 'New Message', new_message_path %>

