<div id="map-canvas" style="width: 100%; height: 100%; margin: 0px; top: 0px; left: 0px; overflow: hidden; z-index: 1; position: absolute; background-color: rgb(229, 227, 223);"></div>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=true"></script>

<div id="main-grid">
  <div id="grid-post-container">
    <% @posts.each do |post| %>
      <div class="grid-post">
        <%= image_tag post.image.url(:medium) %><br>
        <%= post.title %>
        <div class="grid-post-details">
          <div class="grid-post-description"><%= post.description %></div>
          <div class="grid-post-address"><a href="#" class="grid-post-address-link" latitude="<%= post.latitude %>" longitude="<%= post.longitude %>"><%= post.address %></a></div>
          <span class="grid-post-date">Posted <%= distance_of_time_in_words(post.created_at, Time.now) %> ago</span><br>
          <% if current_user && (current_user.id == post.creator_id) %>
            <a rel="nofollow" href="#" class="already-claimed-link" post-id="<%= post.id %>">Already claimed</a><br>
          <% end %>
          <div class="dib-wrapper">
            <%= link_to dib_post_path(post), :title => "Dibs", :class => "dib-link", :"on-the-curb" =>post.on_the_curb, :"creator-id" => post.creator_id do %><image src="assets/dibs.png" class="dibs-image"></image><% end %>
            <i class="fa fa-question" title="Click Dibs to coordinate pickup of stuff and hide the listing from everyone else during one hour."></i>
          </div><br>
        </div>
      </div>
    <% end %>
  </div>
  <noscript>
    <%= paginate @posts %>
  </noscript>
  <div id="bottom-message">
    More free stuff to be added soon!<br>
    <a href="#" class="give-stuff">Have stuff you want to give away?</a><br>
    &#9670; &#9670; &#9670;
  </div>
</div>
